<%= form_for @user, html: {class: "form-signin"} do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h5 class="h5title">Email</h5>
  <div class="input-group">
  <%= f.text_field :email, class: "form-control", :'aria-describedby' => "basic-addon2" %>
  <span class="input-group-addon" id="basic-addon2">@snu.ac.kr</span>
  </div>
  <h5 class="h5title">Password</h5>
  <%= f.password_field :password, class: "form-control" %>
  <h5 class="h5title">Password Confirmation</h5>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit class: "btn btn-lg btn-primary btn-block login" %>
<% end %>
